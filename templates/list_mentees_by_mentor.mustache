<div data-region="mentees-by-meentor">
<form action="../recommend/requestmentors.php?" method="post">
<input type="hidden" name="r" value="{{r_id}}">
<input type="hidden" name="id" value="{{cm_id}}">
<input type="hidden" name="action" value="requestmentor">
<table class="generaltable fullwidth">
    <thead>
        <tr>
            <th scope="col">{{#str}}idnumber{{/str}}</th>
            <th scope="col">{{#str}}user{{/str}}</th>
            <th scope="col">{{#str}}lastname{{/str}}</th>
        </tr>
    </thead>
    <tbody>
        {{# mentores}}
            {{# mentor}}
		        <tr>
		            <td><input type="checkbox" value="{{id}}" checked="checked"></td>
		            <td>{{firstname}}</td>
		            <td>{{lastname}}</td>
		        </tr>		                	
        	{{/mentor}}
       		{{# mentee}}
        	<tr>
            	<td><input type="checkbox" value="{{studentid}}" checked="checked"></td>
            	<td>{{lastname}}</td>
            	<td>{{firstname}}</td>
        	</tr>
        	{{/mentee}}
        {{/ mentores}}
    </tbody>
</table>
<input type="submit" value="Submit">
</form>
</div>
